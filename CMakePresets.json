{
    "version": 2,
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "errors": {"deprecated": true},
            "binaryDir": "${sourceDir}/build/${presetName}/$env{KSAR_BUILD_DIR}"
        },
        {"name": "clang", "inherits": ["base"], "environment": {"CXX": "clang++"}},
        {"name": "gcc",   "inherits": ["base"], "environment": {"CXX": "g++"}}
    ],
    "buildPresets": [
        {"name": "base",  "hidden": true, "jobs": 4},
        {"name": "clang", "inherits": ["base"], "configurePreset": "clang"},
        {"name": "gcc",   "inherits": ["base"], "configurePreset": "gcc"}
    ]
}